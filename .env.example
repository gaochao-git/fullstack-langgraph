# OMind 环境变量配置示例
# 复制此文件为 .env 并根据实际情况修改

# ========== 应用基础配置 ==========
APP_NAME="LangGraph Platform API"
APP_VERSION="1.0.0"
DEBUG=false
ENV=development

# ========== 服务器配置 ==========
HOST=0.0.0.0
PORT=8000
WORKERS=1

# ========== 数据库配置 ==========
DATABASE_TYPE=mysql
DATABASE_USER=your_db_user
DATABASE_PASSWORD=your_db_password
DATABASE_HOST=localhost
DATABASE_PORT=3306
DATABASE_NAME=omind

# ========== Checkpoint配置 ==========
CHECKPOINTER_TYPE=postgres
CHECKPOINTER_HOST=localhost
CHECKPOINTER_PORT=5432
CHECKPOINTER_DB=langgraph_memory
CHECKPOINTER_USER=your_pg_user
CHECKPOINTER_PASSWORD=your_pg_password

# ========== Redis配置 ==========
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0

# ========== API配置 ==========
API_V1_STR=/api/v1
CORS_ORIGINS=["*"]

# ========== 安全配置 ==========
SECRET_KEY=your-secret-key-change-in-production
ACCESS_TOKEN_EXPIRE_MINUTES=30
JWT_SECRET_KEY=your-jwt-secret-key
JWT_ALGORITHM=HS256
REFRESH_TOKEN_EXPIRE_DAYS=7

# ========== 登录安全配置 ==========
MAX_LOGIN_ATTEMPTS=5
LOCKOUT_DURATION_MINUTES=30

# ========== 密码策略配置 ==========
MIN_PASSWORD_LENGTH=8
REQUIRE_UPPERCASE=true
REQUIRE_LOWERCASE=true
REQUIRE_DIGITS=true
REQUIRE_SPECIAL_CHARS=true

# ========== DeepSeek配置 ==========
DEEPSEEK_API_KEY=your_deepseek_api_key
DEEPSEEK_BASE_URL=https://api.deepseek.com

# ========== 日志配置 ==========
LOG_LEVEL=INFO
LOG_DIR=logs

# ========== 报警服务配置 ==========
ALARM_API_URL=http://your-alarm-service/api

# ========== CAS认证配置 ==========
CAS_SERVER_URL=http://localhost:5555/cas
CAS_VERSION=3
CAS_VERIFY_SSL=false
CAS_SERVICE_URL=http://localhost:3000/sso/callback
AUTH_MOCK=false

# ========== 文件上传配置 ==========
# 最大上传文件大小（MB）
MAX_UPLOAD_SIZE_MB=10
# 允许的文件扩展名（逗号分隔）
UPLOAD_ALLOWED_EXTENSIONS=[".pdf",".docx",".txt",".md"]
# 文件上传目录
UPLOAD_DIR=uploads/documents

# ========== 其他配置 ==========
NO_PROXY=""