# ============= 服务配置 =============
ENV=production
PORT=8000
HOST=0.0.0.0
WORKERS=2
LOG_LEVEL=INFO
LOG_DIR=./logs

# ============= LLM配置 =============
DEEPSEEK_API_KEY=sk-490738f8ce8f4a36bcc0bfb165270008
DEEPSEEK_BASE_URL=https://api.deepseek.com

# ============= 会话管理 =============
# 当总消息量超过模型上下文长度的多少比例时触发警告
MULTI_TURN_CONTEXT_THRESHOLD=0.8
# ============= 数据库配置 =============
# LangGraph Checkpointer配置
CHECKPOINTER_TYPE=postgres  
CHECKPOINTER_HOST=localhost
CHECKPOINTER_PORT=5432
CHECKPOINTER_DB=langgraph_memory
CHECKPOINTER_USER=your-db-user
CHECKPOINTER_PASSWORD=your-db-password

# Omind database
DATABASE_TYPE=mysql
DATABASE_HOST=localhost
DATABASE_PORT=3306
DATABASE_NAME=omind
DATABASE_USER=your-db-user
DATABASE_PASSWORD=your-db-password


# ============= JWT认证配置 =============
# JWT认证配置
JWT_SECRET_KEY=your-jwt-secret-key-change-in-production
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=300
REFRESH_TOKEN_EXPIRE_DAYS=7

# 安全配置
SECRET_KEY=your-secret-key-change-in-production
MAX_LOGIN_ATTEMPTS=5
LOCKOUT_DURATION_MINUTES=30

# 密码策略配置
MIN_PASSWORD_LENGTH=8
REQUIRE_UPPERCASE=true
REQUIRE_LOWERCASE=true
REQUIRE_DIGITS=true
REQUIRE_SPECIAL_CHARS=true

# ============= 文档配置 =============
# 文档目录，包含 templates/ 和 generated/ 子目录
DOCUMENT_DIR=/tmp/documents

# 图片处理并发配置
IMAGE_PROCESS_MAX_CONCURRENT=5  # 图片处理最大并发数
IMAGE_PROCESS_TIMEOUT=30  # 单张图片处理超时时间（秒）

# ============= CAS认证配置 =============
# CAS服务器URL（用于构建登录、登出、验证等端点）
CAS_SERVER_URL=http://localhost:8080/cas/
# CAS协议版本（影响验证接口和返回格式，3支持返回更多用户属性）
CAS_VERSION=3
# 是否验证SSL证书（生产环境建议设为true）
CAS_VERIFY_SSL=false
# CAS会话超时时间（秒）
CAS_SESSION_TIMEOUT=36000
# 是否检查重定向URL的合法性
CAS_CHECK_NEXT=true
# 本应用的服务URL（CAS验证后的回调地址）
CAS_SERVICE_URL=http://localhost:3000/sso/callback
# 是否启用单点登出
CAS_SINGLE_LOGOUT_ENABLED=true

# ============= 其他SSO配置 =============
# 可以在这里添加其他SSO提供商的配置，如OAuth2、SAML等


# 报警来源URL
ALARM_API_URL=http://your-alarm-api-url/api/alarms
AUTH_MOCK=false
NO_PROXY="localhost,127.0.0.1,172.16.0.0/12"

# ============= AI 视觉模型配置 =============
# 视觉模型配置（兼容 OpenAI 格式的 API）
# 注意：请根据实际使用的模型提供商填写相应的值
VISION_MODEL_NAME=Pro/Qwen/Qwen2.5-VL-7B-Instruct
VISION_API_BASE_URL=https://api.siliconflow.cn/v1
VISION_API_KEY=your-vision-api-key

