# FastAPI独立部署环境变量配置

# 服务配置
ENV=production
PORT=8000
HOST=0.0.0.0
WORKERS=2
LOG_LEVEL=INFO

# 模型配置
DEEPSEEK_API_KEY=your-key
DEEPSEEK_BASE_URL=https://api.deepseek.com

# 数据库配置（如果需要）
DATABASE_URL=mysql://user:pwd@localhost:3306/test

# Redis配置（如果需要缓存）
# REDIS_URL=redis://localhost:6379

# 外部服务配置
# ELASTICSEARCH_URL=http://localhost:9200
# MYSQL_HOST=localhost
# MYSQL_PORT=3306
# MYSQL_USER=root
# MYSQL_PASSWORD=password

# 安全配置
# SECRET_KEY=your-secret-key-here
# ACCESS_TOKEN_EXPIRE_MINUTES=30

# 监控配置
# SENTRY_DSN=your-sentry-dsn

# 日志配置
LOG_FILE=/app/logs/diagnostic-api.log

# LangGraph Checkpointer配置
# 可选值: memory, postgres
CHECKPOINTER_TYPE=memory

# PostgreSQL持久化配置（当CHECKPOINTER_TYPE=postgres时使用）
# 标准PostgreSQL URI格式: postgresql://[user[:password]@][netloc][:port][/dbname][?param1=value1&...]
# 常用参数: sslmode=prefer|require|disable, connect_timeout=10, application_name=langgraph
POSTGRES_CHECKPOINT_URI=postgresql://username:password@localhost:5432/langgraph_checkpoints?sslmode=prefer&connect_timeout=10