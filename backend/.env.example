# 服务配置
ENV=production
PORT=8000
HOST=0.0.0.0
WORKERS=2
LOG_LEVEL=INFO
LOG_DIR=/tmp/log/langgraph

# 模型配置
DEEPSEEK_API_KEY=your-key
DEEPSEEK_BASE_URL=https://api.deepseek.com

# LangGraph Checkpointer配置: memory|postgres|mysql
CHECKPOINTER_TYPE=postgres
CHECKPOINT_URI=postgresql://user:pwd@ip:5432/dbname

# SOP Database Configuration
DATABASE_TYPE=postgresql  # postgresql or mysql
DATABASE_HOST=localhost
DATABASE_PORT=5432         # 5432 for PostgreSQL, 3306 for MySQL
DATABASE_NAME=langgraph_db
DATABASE_USER=postgres     # postgres for PostgreSQL, root for MySQL
DATABASE_PASSWORD=password