# 认证模块环境变量配置示例

# JWT配置
JWT_SECRET_KEY=your-secret-key-please-change-in-production
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# 安全配置
MAX_LOGIN_ATTEMPTS=5
LOCKOUT_DURATION_MINUTES=30
PASSWORD_MIN_LENGTH=8

# SSO配置
SSO_REDIRECT_URI=http://localhost:3000/sso/callback

# Google OAuth2配置示例
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_AUTH_URL=https://accounts.google.com/o/oauth2/v2/auth
GOOGLE_TOKEN_URL=https://oauth2.googleapis.com/token
GOOGLE_USERINFO_URL=https://www.googleapis.com/oauth2/v2/userinfo

# 企业微信OAuth2配置示例
WECHAT_WORK_CORP_ID=your-corp-id
WECHAT_WORK_AGENT_ID=your-agent-id
WECHAT_WORK_SECRET=your-secret
WECHAT_WORK_AUTH_URL=https://open.weixin.qq.com/connect/oauth2/authorize
WECHAT_WORK_TOKEN_URL=https://qyapi.weixin.qq.com/cgi-bin/gettoken
WECHAT_WORK_USERINFO_URL=https://qyapi.weixin.qq.com/cgi-bin/user/getuserinfo

# 钉钉OAuth2配置示例
DINGTALK_APP_KEY=your-app-key
DINGTALK_APP_SECRET=your-app-secret
DINGTALK_AUTH_URL=https://oapi.dingtalk.com/connect/oauth2/sns_authorize
DINGTALK_TOKEN_URL=https://oapi.dingtalk.com/sns/getuserinfo_bycode
DINGTALK_USERINFO_URL=https://oapi.dingtalk.com/user/getuserinfo

# LDAP配置示例（用于企业内部）
LDAP_SERVER=ldap://your-ldap-server:389
LDAP_BIND_DN=cn=admin,dc=example,dc=com
LDAP_BIND_PASSWORD=your-ldap-password
LDAP_SEARCH_BASE=ou=users,dc=example,dc=com
LDAP_USER_FILTER=(uid={username})

# MFA配置
MFA_ISSUER_NAME=智能运维平台
MFA_WINDOW_SIZE=1

# 邮件配置（用于密码重置）
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=noreply@example.com
SMTP_PASSWORD=your-smtp-password
SMTP_FROM_EMAIL=noreply@example.com
SMTP_FROM_NAME=智能运维平台

# Redis配置（用于令牌黑名单和会话管理）
REDIS_URL=redis://localhost:6379/0
REDIS_PASSWORD=
REDIS_TOKEN_PREFIX=auth:token:
REDIS_SESSION_PREFIX=auth:session:

# 安全头配置
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173
CORS_ALLOW_CREDENTIALS=true

# 日志配置
AUTH_LOG_LEVEL=INFO
AUTH_LOG_FILE=/var/log/app/auth.log

# 开发环境配置
DEBUG_MODE=false
ALLOW_INSECURE_HTTP=false